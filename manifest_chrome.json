{
  "manifest_version": 3,
  "name": "Rogue Dex",
  "version": "2.4",
  "permissions": ["activeTab", "tabs", "webRequest"],
  "host_permissions": [
    "https://pokerogue.net/*",
    "https://api.pokerogue.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://api.pokerogue.net/*", "https://pokerogue.net/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://pokerogue.net/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "injected.js"],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }
  ]
}
